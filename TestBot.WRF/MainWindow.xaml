<Window x:Name="MainWindow1" x:Class="TestBot.WRF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestBot.WRF"
        mc:Ignorable="d"
        Title="TestBOT  by DRL" Height="484" Width="371" ResizeMode="NoResize" Initialized="MainWindow1_Initialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="431*"/>
        </Grid.RowDefinitions>
        <TabControl HorizontalAlignment="Left" Height="3" Margin="22,29,0,0" VerticalAlignment="Top" Width="5" Grid.Row="1">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <TabControl Grid.RowSpan="2">
            <TabItem Header="Пользователи" Width="184" HorizontalAlignment="Center" Height="24" VerticalAlignment="Bottom">
                <Grid Background="#FFFACAFF">
                    <Label Content="Группы" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBoxShowUsers" Margin="10,46,0,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="154" SelectionChanged="ComboBoxShowUsers_SelectionChanged">
                        <ComboBoxItem Content="Все пользователи"/>
                    </ComboBox>
                    <Button x:Name="ButtonSaveChangeUser" Content="Сохранить" HorizontalAlignment="Left" Margin="244,301,0,0" VerticalAlignment="Top" Width="104"/>
                    <Label Content="Контроль групп" HorizontalAlignment="Center" Margin="0,327,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label Content="Название:" HorizontalAlignment="Left" Margin="17,367,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TextBoxNewGroupName" HorizontalAlignment="Left" Margin="87,358,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239" Height="22"/>
                    <Button Content="+" HorizontalAlignment="Left" Margin="326,358,0,0" VerticalAlignment="Top" Width="22
                            " Height="22"/>
                    <ComboBox Height="22" Margin="87,385,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="239"/>
                    <Button Content="-" HorizontalAlignment="Left" Margin="326,385,0,0" VerticalAlignment="Top" Width="22" Height="22"/>
                    <DataGrid x:Name="DataGridShowUsers" HorizontalAlignment="Center" Height="207" Margin="0,89,0,0" VerticalAlignment="Top" Width="330" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Тесты/Опросы" Height="24" VerticalAlignment="Top" Margin="0,0,-91,0">
                <Grid Background="#FFFACAFF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Создание теста/опроса" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="25" Width="160" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Label Content="Название:" HorizontalAlignment="Right" Margin="0,71,267,0" VerticalAlignment="Top" Height="26" Width="65"/>
                    <Label Content="группа(ы):" HorizontalAlignment="Right" Margin="0,102,267,0" VerticalAlignment="Top" Height="26" Width="66"/>
                    <Label Content="Длительность:" HorizontalAlignment="Right" Margin="0,133,267,0" VerticalAlignment="Top" Height="26" Width="88"/>
                    <CheckBox x:Name="CheckBoxDeadLine" Content="ДедЛайн" HorizontalAlignment="Left" Margin="24,51,0,0" VerticalAlignment="Top" Height="15" Width="69"/>
                    <TextBox x:Name="TextBoxTestName" HorizontalAlignment="Right" Margin="0,73,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" Height="22
                             " ToolTip=""/>
                    <ComboBox x:Name="ComboBoxChooseGroup" HorizontalAlignment="Right" Margin="0,104,32,0" VerticalAlignment="Top" Width="230" Height="22"/>
                    <Button x:Name="ButtonAddGroupToSend" Content="+" Margin="0,104,10,0" HorizontalAlignment="Right" Width="22" Height="22" VerticalAlignment="Top"/>
                    <TextBox x:Name="TextBoxDuration" HorizontalAlignment="Right" Margin="0,135,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="252" Height="22" Visibility="Visible"/>
                    <DatePicker x:Name="DatePickerDuration" HorizontalAlignment="Left" Margin="103,133,0,0" VerticalAlignment="Top" Width="140" Visibility="Hidden"/>
                    <Label Content="Вопросы" HorizontalAlignment="Center" Margin="0,177,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                    <Label Content="Текст:" HorizontalAlignment="Right" Margin="0,227,267,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="TextBoxQuestionText" HorizontalAlignment="Right" Margin="0,227,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="252" Height="22"/>
                    <CheckBox Content="Опрос" HorizontalAlignment="Left" Margin="187,51,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
